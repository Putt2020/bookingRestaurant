%h1 Listing tables

%table#favTable.display{:style => "width:100%"}
  %thead
    %tr
      %th Customer cap
      %th Table number
      %th Restaurant
      %th
      %th
      %th

  %tbody
    - @tables.each do |table|
      %tr
        %td= table.customer_cap
        %td= table.table_number
        %td= table.restaurant.name
        %td= link_to 'Show', table
        %td= link_to 'Edit', edit_table_path(table)
        %td= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Table', new_table_path

:javascript
  console.log($('#favTable'));
  $(document).ready(function() {
    $('#favTable').DataTable( {
        "scrollY":        "50vh",
        "scrollCollapse": true,
        "paging":         false
    } );
  });
-# frozen_string_literal: true
= simple_form_for(@rate) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :rate_score
    = f.association :user, :value => @user.id
    = f.association :restaurant, :value => @restaurant.id

  .form-actions
    = f.button :submit, 'Create',class:"btn btn-primary mt-2"
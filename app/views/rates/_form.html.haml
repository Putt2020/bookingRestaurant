= form_for @rate do |f|
  - if @rate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rate.errors.count, "error")} prohibited this rate from being saved:"
      %ul
        - @rate.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :rate_score
    = f.number_field :rate_score
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :restaurant
    = f.text_field :restaurant
  .actions
    = f.submit 'Save'

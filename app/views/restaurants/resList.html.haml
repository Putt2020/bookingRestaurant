%head
  :css
    body {
      background-image: url("https://images.adsttc.com/media/images/5e4c/1025/6ee6/7e0b/9d00/0877/large_jpg/feature_-_Main_hall_1.jpg?1582043123");
      background-color: #ffe4c4;
      background-size: cover;
      background-repeat: no-repeat;
    }
    .mainContent {
      background-color: #ffffff;
      margin-top: 20px;
      padding: 40px;
      width: 80%;
      max-width: 750px;
    }

%body
  .mainContent.mx-auto
    %h2 Restaurants
    %table#resTable.display{:style => "width:100%"}
      %thead
        %tr
          %th Restaurant
          %th Max_table
          %th Rate
          %th Go to


      %tbody
        - getMaxTable
        - restRate
        - allRest.each do |rest|
          %tr
            %td= rest.name
            %td= @tabCount[rest.id]
            %td= @resRate[rest.id].round(1)
            %td= link_to "visit #{rest.name}", "restaurant/#{rest.name}", class:"btn btn-primary btn-sm"
            

:javascript
  console.log($('#resTable'));
  $(document).ready(function() {
    $('#resTable').DataTable( {
        "scrollY":        "50vh",
        "scrollCollapse": true,
        "paging":         false
    } );
  });
      